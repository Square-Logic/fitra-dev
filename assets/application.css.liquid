:root {
  --main-font: 'Helvetica Neue', Arial, Helvetica, sans-serif;

  --black: #000000;
  --white: #FFFFFF;
  --color-accent: #FF3700;

  --line-global: 20px;
  --gutter-global: calc(var(--line-global) * 2);
}

/* Base */

* {
  font-family: var(--main-font);
  box-sizing: border-box;
}

body {
  background-color: var(--white);
}