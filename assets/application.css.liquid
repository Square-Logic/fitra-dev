:root {
  --main-font: 'Helvetica Neue', Arial, Helvetica, sans-serif;

  --black: #000000;
  --white: #FFFFFF;
  --color-accent: #FF3700;

  --line-global: 20px;
  --gutter-global: calc(var(--line-global) * 2);
}

/* Base */
* {
  font-family: var(--main-font);
  box-sizing: border-box;
}

html,
body {
  width: 100%;
  margin: 0;
  padding: 0;
  color: var(--black);
  line-height: var(--line-global);
}

body {
  background-color: var(--white);
}

h1,h2,h3,h4,h5,h6,p {
  margin: 0;
  padding: 0;
}

/* Utility Classes */
.grid {
  display: grid;
  column-gap: var(--gutter-global);
  row-gap: var(--gutter-global);
}

.two-columns {
  grid-template-columns: 1fr 1fr;
}

.valign-center {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.valign-bottom {
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}



.main-content {
  min-height: 100vh;
  padding: var(--gutter-global);
}

/* Index Styles */
#page-index {
  
}

#product-info {
  grid-template-rows: minmax(max-content, auto) minmax(min-content, max-content);
}

.headline {
  padding-bottom: calc(var(--line-global) * 3 );
}